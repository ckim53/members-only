<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Home</title>
  </head>
  <body>
    <h1>
      Welcome to the Club<% if (currentUser) { %>, <%= currentUser.username %><%
      } %>!
    </h1>
    <% if (currentUser) { %>
    <a href="/log-out">Log Out</a> |
    <a href="/new-message">New Message</a>
    <% } else { %>
    <a href="/log-in">Log In</a> |
    <a href="/sign-up">Sign Up</a>
    <% } %>
    <h2>Messages from Members</h2>
    <% if (messages.length) { %> <% messages.forEach(msg => { %>
    <h3><%= msg.title %></h3>
    <p><%= msg.text %></p>

    <% if (currentUser && currentUser.membership) { %>
    <h5>By <%= msg.author %> on <%= msg.time %></h5>

    <% if (currentUser && currentUser.admin) { %>
    <form
      action="/messages/<%= msg.id %>/delete"
      method="POST"
      style="display: inline"
    >
      <button type="submit">Delete</button>
    </form>
    <% } %> <% } %> <% }) %> <% } else {%>
    <p>No messages yet.</p>
    <%}%>
  </body>
</html>
